<div class="flex flex-col gap-4 w-full">
  <h1 class="text-3xl font-bold">My Tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <div class="flex items-center gap-2">
        <input class="pointer-events-none" type="checkbox" <%= task.completed ? 'checked' : '' %>>
        <li><%= link_to task.title, task_path(task), class: 'text-blue-500 underline' %></li>
        <p>-</p>
        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'text-red-500' do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </div>
    <% end %>
  </ul>

  <div class="w-full h-[1px] bg-gray-200"></div>

  <%= link_to new_task_path, class: 'text-blue-500 flex items-center gap-1' do %>
    <i class="fa-solid fa-plus"></i>
    <p class="underline">Add a new task</p>
  <% end %>
</div>
